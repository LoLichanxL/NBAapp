<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NBANews" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/black</item>

        <item name="android:navigationBarColor">@color/black_light</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>

        <item name="mainScreenTitle">@style/Theme.NBANews.PageTitleLight</item>
        <item name="leagueTitle">@style/Theme.NBANews.LeagueTitleLight</item>
        <item name="leagueSubTitle">@style/Theme.NBANews.LeagueSubTitleLight</item>
        <item name="arrowBackIcon">@style/Theme.NBANews.ArrowBackIconLight</item>
        <item name="sportTitle">@style/Theme.NBANews.SportTitleLight</item>
        <item name="newsTitle">@style/Theme.NBANews.NewsTitleLight</item>
        <item name="newsDate">@style/Theme.NBANews.NewsDateLight</item>
        <item name="gameStatus">@style/Theme.NBANews.GameStatusLight</item>
        <item name="teamScore">@style/Theme.NBANews.GameScoreLight</item>
        <item name="teamTitle">@style/Theme.NBANews.TeamTitleLight</item>
        <item name="loginButton">@style/Theme.NBANews.LoginButtonLight</item>
    </style>
    <style name="Theme.NBANews.PageTitleLight" parent="Theme.NBANews.PageTitle">>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.NBANews.LeagueTitleLight" parent="Theme.NBANews.LeagueTitle">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Theme.NBANews.LeagueSubTitleLight" parent="Theme.NBANews.LeagueSubTitle">
        <item name="android:textColor">@color/light_grey</item>
    </style>

    <style name="Theme.NBANews.ArrowBackIconLight" >
        <item name="android:tint">@color/light_grey</item>
    </style>
    <style name="Theme.NBANews.SportTitleLight" parent="Theme.NBANews.SportTitle">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Theme.NBANews.NewsTitleLight" parent="Theme.NBANews.NewsTitle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.NBANews.GameStatusLight" parent="Theme.NBANews.GameStatus">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.NBANews.NewsDateLight" parent="Theme.NBANews.NewsDate">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.NBANews.GameScoreLight" parent="Theme.NBANews.GameScore">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.NBANews.TeamTitleLight" parent="Theme.NBANews.TeamTitle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.NBANews.LoginButtonLight" parent="Theme.NBANews.LoginButton">
        <item name="materialThemeOverlay">@style/ThemeOverlayLoginButton</item>
    </style>
    
    <style name="ThemeOverlayLoginButton">
        <item name="colorPrimary">@color/accent</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>
</resources>